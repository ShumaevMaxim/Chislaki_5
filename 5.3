#include<iostream>
#include<cmath>
using namespace std;

double f(double x) {
    return 2 * x * x + 3 * x - 1;
}

double simpson(double a, double b, int n) {
    double h = (b - a) / n;         // шаг интегрирования

    double sum1 = 0;
    for (int i = 1; i < n; i += 2) {
        sum1 += f(a + i * h);       //сумма значений ф-ий в нечётных точках
    }

    double sum2 = 0;                    
    for (int i = 2; i < n; i += 2) {
        sum2 += f(a + i * h);       //сумма значений ф-ий в чётных точках
    }

    double integral = (h / 3) * (f(a) + f(b) + 4 * sum1 + 2 * sum2);
    return integral;
}


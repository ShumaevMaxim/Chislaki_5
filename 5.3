    int n;

    cout << "Введите начало интервала: ";
    cin >> a;

    cout << "Введите конец интервала: ";
    cin >> b;

    cout << "Введите количество разбиений: ";
    cin >> n;

    double result = simpson(a, b, n);

    cout << "Результат интегрирования: " << result << endl;

    return 0;
}
